<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FlatMate</title>

    <environment names="Development">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700">

        <link rel="stylesheet" asp-href-include="~/lib/css/**/*.min.css" />
        <link rel="stylesheet" asp-href-include="~/css/**/*.min.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <input id="menu-checkbox" type="checkbox" />
    <label class="menu-toggle icon-32 icon-burger" for="menu-checkbox"></label>

    <nav>
        <span class="title">FlatMate</span>
        <ul>
            <li><a asp-area="" asp-controller="Dashboard">Dashboard</a></li>
            <li><a asp-area="Lists" asp-controller="Home" asp-action="">Lists</a></li>
            <li><a href="#">Offers</a></li>
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

    <environment names="Development">
        <script src="~/node_modules/vue/dist/vue.js"></script>
        <script src="~/lib/js/atomic.min.js"></script>
        <script src="~/js/flatmate.js"></script>
        
    </environment>

    @await RenderSectionAsync("viewData", false)
    @await RenderSectionAsync("vueInit", false)

</body>
</html>