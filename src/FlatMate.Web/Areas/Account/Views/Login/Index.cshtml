@model FlatMate.Web.Areas.Account.Data.LoginViewModel

@{
    Layout = "_LayoutBlank";
}

<section class="container login">
    <div style="width: 100%;">
        <h1 style="text-align: center">FlatMate</h1>
        <form asp-area="Account" asp-controller="Login" method="post">
            <fieldset>
                <label asp-for="User.UserName"></label>
                <input asp-for="User.UserName" autofocus />

                <label asp-for="User.Password"></label>
                <input asp-for="User.Password" />

                <div class="pull-right">
                    <input class="button-primary" type="submit" value="Send">
                </div>
            </fieldset>
        </form>
    </div>
</section>
