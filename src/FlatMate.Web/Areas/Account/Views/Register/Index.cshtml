@model FlatMate.Web.Areas.Account.Data.RegisterViewModel

@{
    Layout = "_LayoutBlank";
}

<section class="container register">
    <div style="width: 100%;">
        <h1 style="text-align: center">Add User</h1>
        <form asp-area="Account" asp-controller="Register" method="post">
            <fieldset>
                <label asp-for="User.UserName"></label>
                <input asp-for="User.UserName" />

                <label asp-for="User.Name"></label>
                <input asp-for="User.Name" />

                <label asp-for="User.LastName"></label>
                <input asp-for="User.LastName" />

                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" />

                <label asp-for="User.Password"></label>
                <input asp-for="User.Password" />

                <label asp-for="User.PasswordConfirmation"></label>
                <input asp-for="User.PasswordConfirmation" />

                <div class="pull-right">
                    <input class="button-primary" type="submit" value="Send">
                </div>
            </fieldset>
        </form>
    </div>
</section>
